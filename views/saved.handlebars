<div class="jumbotron jumbotron-fluid">
    <center>
        <div class="container jumbo-container">
            <h1 class="display-4">Scrape Global Cycling Network Articles</h1>
            <h2>Your Saved Videos!</h2>
        </div>
    </center>
</div>
<div class="container">
{{#each articles}} 
{{#if keep}}
<div class="card">
    <h5 class="card-header">{{title}}</h5>
    <div class="card-body">
        <div class="row">
            <div class="col">
                <h5 class="card-text">{{date}}</h5>
            </div>      
            <div class="col btn-row">
                <a href="{{link}}" class="btn btn-info watchBtn card-link">Watch it!</a>
                <button type="button" class="btn btn-dark mx-auto unsave" data-id={{this._id}}>Unsave</button>
                <button type="button" class="btn btn-secondary mx-auto add-note" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Article Note</button>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <img class="card-img img-fluid" src="{{img}}">
            </div>
        </div>
    </div>
</div> 
{{else}}
<h1>You have no saved articles :(
</h1>
{{/if}}
{{/each}}
</div>

