<div class="jumbotron-sm">
    <center>
            <h2>Your Saved Videos!</h2>
    </center>
</div>
<div class="container">
{{#each articles}} 
{{#if keep}}
<div class="card card-fill">
    <h5 class="card-header">{{title}}</h5>
    <div class="card-body">
        <center>
        <div class="row">
            <div class="col-1"></div>
            <div class="col">
                <h5 class="card-text">{{date}}</h5>
            </div>      
            <div class="col">
                <a href="{{link}}" class="btn btn-info keep-Btn card-link">Watch it!</a>
            </div>
            <div class="col">
                <button type="button" class="btn btn-dark mx-auto remove" data-id={{this._id}}>Remove</button>
            </div>
            <div class="col">    
                <button type="button" class="btn btn-secondary mx-auto addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Video Note</button>
            </div>
            <div class="col-1"></div>
        </div>
        <div class="row">
            <div class="col">
                <img class="card-img img-fluid" src="{{img}}">
            </div>
        </div>
        </center>
    </div>
</div> 
{{/if}}
{{/each}}

{{!-- MODAL FOR NOTE --}}
{{#each articles}}
    {{> notes-modal }}
{{/each}}

</div>

